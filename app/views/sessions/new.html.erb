<h2 align="center">Welcome to MessageMe - <em>a complete Chat App</em></h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Log in to continue
</h4>
<div class="ui placeholder segment">
    <%= form_for :session, html: {class: 'ui form'}, url: root_path do |x| %>
      <div class="field">
        <%= x.label :username %>
        <div class="ui left icon input">
          <%= x.text_field :username, placeholder: 'Username' %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= x.label :password %>
        <div class="ui left icon input">
          <%= x.password_field :password, placeholder: 'Password' %>
          <i class="lock icon"></i>
        </div>
      </div>
      <div class="field" align="center">
        <div class="ui large buttons">
          <%= x.submit 'Log in', class: 'ui orange button'  %>
          <div class="or"></div>
          <%= x.submit 'Sign Up', class: 'ui orange button', formaction: signup_path %>
        </div>
      </div>
    <% end %>
</div>