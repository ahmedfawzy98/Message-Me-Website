<h2 align="center">Welcome to MessageMe - <em>a complete Chat App</em></h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for :session, html: {class: 'ui form'}, url: root_path do |x| %>
        <div class="field">
          <%= x.label :username %>
          <div class="ui left icon input">
            <%= x.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= x.label :password %>
          <div class="ui left icon input">
            <%= x.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= x.submit 'Login', class: 'ui orange submit button login'%>
    <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui disabled big button orange signup">
        <i class="signup fluid icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>